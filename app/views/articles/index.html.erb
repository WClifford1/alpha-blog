<h1>Listing all articles</h1>

<p>
    <%= link_to "Create new article", new_article_path %>
</p>
<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
    </tr>

    <% @articles.each do |x| %>

    <small>Created by: <%= x.user.username if x.user%>,
    <%= time_ago_in_words(x.created_at) %> ago,
    last updated: <%= time_ago_in_words(x.updated_at) %>
</small>
        <tr>
            <td><%= x.title %></td>
            <td><%= x.description %></td>
            <td><%= link_to 'Edit', edit_article_path(x) %></td>
            <td><%= link_to 'Show', article_path(x) %></td>
            <td><%= link_to 'Delete', article_path(x), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
    <% end %>
</table>

  

